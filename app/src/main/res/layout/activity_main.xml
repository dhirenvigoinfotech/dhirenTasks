<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activities.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaunchProject1"
        android:text="SQLite Task"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaunchProject2"
        android:text="API Task"
        android:layout_below="@+id/btnLaunchProject1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaunchProject3"
        android:text="Data-Passing Task"
        android:layout_below="@+id/btnLaunchProject2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaunchProject4"
        android:text="BG/FG Task"
        android:layout_below="@+id/btnLaunchProject3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">
    </Button>


</RelativeLayout>